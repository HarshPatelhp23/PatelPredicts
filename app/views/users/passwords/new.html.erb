<section class="h-100 bg-light">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-dark">
          <div class="row g-0">
            <!-- Left Side (Forgot Password Form) -->
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <div class="text-center">
                  <%= image_tag('pp_logo.png', style: 'width: 125px;', alt: 'logo') %>
                  <h4 class="mt-1 mb-5 pb-1">We are The PatelPredicts Team</h4>
                </div>

                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: :false } }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  
                  <p>Forgot your password? Enter your email address, and we'll send you reset password instructions.</p>

                  <div class="mb-4">
                    <%= f.label :email, class: "form-label mt-4" %>
                    <%= f.email_field :email, class: "form-control res-full-width", placeholder: "Enter your Email here", autofocus: true, autocomplete: "email" %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit "Send reset password instructions", class: "btn btn-primary btn-block fs-lg bg-gradient mb-3", style: "width: 295px; height: 40px; border-radius: 5px; background-color: #9932CC; color: white; margin-right: 95px; margin-top: 20px; margin-bottom: 40px; text-decoration: none;" %>
                    <h6 class="mb-3 d-none d-lg-block">If you don't have an account yet, create one by clicking the button below!</h6>
                    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-success btn-block fs-lg bg-gradient mb-3 res-button", style: "text-decoration: none; height: 40px; border-radius: 5px; background-color: #9932CC; color: white; margin-top: 15px; margin-left: 9px;" %>
                    <%= link_to 'Back', root_path, class: 'btn btn-success res-button mx-2 text-white' %>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Vertical Line -->
            <div class="col-lg-1 vertical-line"></div>

            <!-- Right Side (Additional Content) -->
            <div class="col-lg-5 d-flex align-items-center bg-gradient res-right-hide">
              <div class="px-3 py-4 p-md-5 mx-md-4 res-right-hide">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .vertical-line {
    border-left: 5px solid #9932CC;
    height: 100%;
    position: absolute;
    margin-left: 50%;
  }

  @media (max-width: 767px) {
    .vertical-line {
      display: none;
    }

    .card-body {
      padding: 2rem;
    }

    .col-lg-6 {
      order: 2;
    }

    .col-lg-5 {
      order: 1;
    }
  }

  @media (max-width: 575px) {
    .text-center.pt-1.mb-5.pb-1 {
      flex-direction: column;
      align-items: center;
      margin-right: 280px;
    }
  }

  @media (max-width: 550px) and (min-width: 0px) {
    .res-full-width {
      width: 100% !important;
    }

    .res-right-hide {
      display: none !important;
    }

    .res-button{
      width: 265px !important;
    }
  }
</style>
