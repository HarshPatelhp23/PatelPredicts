<section class="h-100 bg-light">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-dark">
          <div class="row g-0">
            <!-- Left Side (Login Form) -->
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <div class="text-center">
                  <%= image_tag('pp_logo.png', style: 'width: 125px;', alt: 'logo') %>
                  <h4 class="mt-1 mb-5 pb-1">Welcome to Patel-Predicts </h4>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <p class="mb-4">Please login to your account</p>

                  <div class="mb-4">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control res-email", placeholder: "Enter your Email here", autofocus: true, autocomplete: "email", required: true %>
                  </div>

                  <div class="mb-4">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control res-pass", placeholder: "Enter your Password here", autocomplete: "current-password" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <div class="text-center pt-1 mb-5 pb-1 d-lg-flex justify-content-center res-btn-div">
                    <%= f.submit "Log in", class: "btn btn-primary btn-block fs-lg bg-gradient mb-3 res-login", style: "width: 150px; height: 40px; border-radius: 5px; background-color: #0d6efd; color: white; margin-top: 20px;" %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'btn theme-btn-color text-white p-2 mt-3 mx-4 res-forgot', style: "text-decoration: none; height: 45px;" %>
                  </div>

                  
                <% end %>

                <div class="text-center d-lg-flex justify-content-center text-white">
                  <%= link_to 'Back to home', root_path, class: 'home btn btn-success mb-3 text-white res-back-home', style: "text-decoration: none;" %>
                </div>

              </div>
            </div>

            <!-- Vertical Line -->
            <div class="col-lg-1 vertical-line"></div>

            <!-- Right Side (Additional Content) -->
            <div class="col-lg-5 d-flex align-items-center bg-gradient res-right-hide">
              <div class="px-3 py-4 p-md-5 mx-md-4">
                <div class="text-center">
                  <%= image_tag('default_player_image.jpeg', style: 'width: 185px;', alt: 'logo') %>
                  <h4 class="mt-3 mb-5 pb-4">We are more than just an Auction-Site</h4>
                  <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .vertical-line {
    border-left: 5px solid #9932CC;
    height: 100%;
    position: absolute;
    margin-left: 50%;
  }

  @media (max-width: 767px) {
    .vertical-line {
      display: none;
    }

    .card-body {
      padding: 2rem;
    }

    .col-lg-6 {
      order: 2;
    }

    .col-lg-5 {
      order: 1;
    }
  }

  @media (max-width: 575px) {
    .text-center.pt-1.mb-5.pb-1.d-lg-flex.justify-content-center {
      flex-direction: column;
      align-items: center;
      margin-right: 280px;
    }
  }

@media (max-width: 550px) and (min-width: 0px) {
    .res-login {
      width:100% !important;
    }
    .res-forgot {
      width:100%;
      margin-left:0px !important;
    }

    .res-btn-div{
      width:100%;
    }

    .res-email{
      width: 100% !important;
    }

    .res-pass{
      width:100% !important;
    }

    .res-back-home{
      width:100% !important;
    }

    .res-right-hide{
      display:none !important;
    }
  }
</style>
